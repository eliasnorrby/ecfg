{
  "name": "ecfg",
  "version": "1.2.0",
  "description": "CLI for JavaScript project configuration",
  "main": "./lib/index.js",
  "bin": {
    "ecfg": "./lib/index.js"
  },
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "prebuild": "del lib/",
    "build": "tsc --project tsconfig.production.json",
    "postbuild": "cpy '**/*' '!**/*.ts' ../lib/ --cwd=src/ --no-overwrite --parents",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "lint": "eslint src",
    "semantic-release": "semantic-release",
    "prepare": "npm run build",
    "program": "node ./lib/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eliasnorrby/ecfg.git"
  },
  "keywords": [
    "config",
    "prettier",
    "eslint",
    "git",
    "dependabot",
    "semantic-release",
    "commitlint"
  ],
  "author": "eliasnorrby",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eliasnorrby/ecfg/issues"
  },
  "homepage": "https://github.com/eliasnorrby/ecfg#readme",
  "dependencies": {
    "@eliasnorrby/log-util": "^1.1.9",
    "execa": "^5.0.0",
    "has-yarn": "^2.1.0",
    "js-yaml": "^3.14.0",
    "ora": "^5.1.0",
    "typescript": "^4.2.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@eliasnorrby/commitlint-config": "^2.3.37",
    "@eliasnorrby/prettier-config": "^4.2.24",
    "@eliasnorrby/semantic-release-config": "^3.0.23",
    "@types/jest": "^26.0.22",
    "@types/js-yaml": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "cpy-cli": "^3.1.1",
    "del-cli": "^3.0.1",
    "eslint": "^7.23.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "semantic-release": "^17.4.2",
    "ts-jest": "^26.5.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
